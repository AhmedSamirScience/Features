<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
tools:context=".ui.fragment.back.BackFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_40sdp">

    <TextView
        android:id="@+id/backTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_title"
        android:gravity="center"
        android:textSize="@dimen/_50ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backOptionsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>